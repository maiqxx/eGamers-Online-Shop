<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GamingGears Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*<link rel="stylesheet" href="~/Content/w3/w3.css" />*@
    <link rel="stylesheet" href="~/Content/myCSS/commonStyling.css" />
    <link rel="stylesheet" href="~/Content/LayoutStyleSheet.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
    <body class="pt-0">


        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand keychainify-checked" href="#">Gaming.Gears</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse " id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item pl-4">   <a class="nav-link keychainify-checked" onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
                    <li class="nav-item pl-4">   <a class="nav-link keychainify-checked" href="#about" @*onclick="location.href='@Url.Action("About", "Home")'"*@>About</a></li>
                    <li class="nav-item pl-4">   <a class="nav-link keychainify-checked" href="#contact" @*onclick="location.href='@Url.Action("Contact", "Home")'"*@>Contact</a></li>
                    
                </ul>
               
            </div>
        </nav>





        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p style="color:white; ">&copy; @DateTime.Now.Year - GamingGears Shop</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

    </body>
</html>
